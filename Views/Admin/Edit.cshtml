@model NewsWebsite.Models.ViewModels.EditUserRolesViewModel

@{
    ViewData["Title"] = "Editar Roles";
}

<h2>Editar Roles para @Model.Email</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="UserId" />

    <div class="form-group">
        @foreach (var role in Model.AvailableRoles)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="SelectedRoles" value="@role"
                    @(Model.SelectedRoles.Contains(role) ? "checked" : "") />
                <label class="form-check-label">@role</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-success mt-3">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Volver</a>
</form>