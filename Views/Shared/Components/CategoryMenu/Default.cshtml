@model IReadOnlyCollection<NewsWebsite.Models.Category>

@if (Model.Count > 0)
{
    foreach (var category in Model)
    {
        <li>
            <a class="dropdown-item"
               asp-controller="Categories"
               asp-action="Details"
               asp-route-id="@category.Id">
                @category.Name
            </a>
        </li>
    }
}
else
{
    <li>
        <span class="dropdown-item-text text-muted">Sin categor√≠as</span>
    </li>
}
